<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardCornerRadius="40dp"
                android:layout_marginTop="-40dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#DB4437">

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="20dp"
                android:elevation="30dp"
                app:cardElevation="10dp"
                android:layout_marginTop="-60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF">

                    <TextView
                        android:id="@+id/helloTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello Darshal !!!"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:textSize="20sp"
                        android:fontFamily="@font/gotham"
                        android:textColor="@android:color/black"
                        />
                    <View
                        android:id="@+id/divider3"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="3dp"
                        android:layout_below="@+id/helloTv"
                        android:background="@color/colorPrimaryDark" />
                    <TextView
                        android:layout_below="@+id/helloTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Strict actions would be taken by police, if you will add fake report "
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/gotham"
                        android:textColor="#DB4437"
                        />


                </RelativeLayout>



            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Profile:"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/gotham" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_margin="14dp"
                android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                app:cardCornerRadius="20dp"
                android:elevation="20dp"
                app:cardElevation="8dp"
                android:layout_weight="1"
                android:layout_margin="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/imageView1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:lottie_autoPlay="true"
                        android:layout_centerInParent="true"
                        android:elevation="10dp"
                        app:lottie_rawRes="@raw/profile"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Profile"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/gotham"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/imageView1"/>




                </RelativeLayout>



            </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    app:cardCornerRadius="20dp"
                    android:elevation="20dp"
                    app:cardElevation="8dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/imageView2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:lottie_autoPlay="true"
                            android:layout_centerInParent="true"
                            android:elevation="10dp"
                            app:lottie_rawRes="@raw/history"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Reports"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/gotham"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/imageView2"/>


                    </RelativeLayout>



                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type Of Reports:"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/gotham" />
            <androidx.cardview.widget.CardView
                android:id="@+id/firCv"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="20dp"
                android:elevation="20dp"
                app:cardElevation="10dp"
                android:layout_margin="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#4285F4">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/firLottie"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:lottie_autoPlay="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:elevation="10dp"
                        app:lottie_rawRes="@raw/fir"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FIR REPORT"
                        android:fontFamily="@font/gotham"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:textSize="24sp"/>




                </RelativeLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/missingCv"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="20dp"
                android:elevation="20dp"
                app:cardElevation="10dp"
                android:layout_margin="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0F9D58">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/missingLottie"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:lottie_autoPlay="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:elevation="10dp"
                        app:lottie_rawRes="@raw/missing"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MISSING PERSON"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/gotham"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:textSize="24sp"/>





                </RelativeLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/liveCv"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="20dp"
                android:elevation="20dp"
                app:cardElevation="10dp"
                android:layout_margin="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#566e7a">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/liveLottie"
                        android:layout_width="140dp"
                        android:layout_height="120dp"
                        app:lottie_autoPlay="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:elevation="10dp"
                        app:lottie_rawRes="@raw/live"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LIVE CRIME"
                        android:fontFamily="@font/gotham"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:textSize="24sp"/>


                </RelativeLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="20dp"
                android:elevation="20dp"
                app:cardElevation="10dp"
                android:layout_margin="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#DB4437">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/cyberLottie"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:lottie_autoPlay="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:elevation="10dp"
                        app:lottie_rawRes="@raw/cyber"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CYBER CRIME"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/gotham"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:textSize="24sp"/>




                </RelativeLayout>



            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/aboutCv"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="20dp"
                android:elevation="20dp"
                app:cardElevation="10dp"
                android:layout_margin="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/aboutLottie"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:lottie_autoPlay="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:elevation="10dp"
                        app:lottie_rawRes="@raw/police"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ABOUT APP"
                        android:fontFamily="@font/gotham"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:textSize="24sp"/>


                </RelativeLayout>



            </androidx.cardview.widget.CardView>




        </LinearLayout>




    </ScrollView>


</RelativeLayout>